{
  "manifest_version": 3,
  "name": "Bilibili Ad Alert",
  "version": "0.1",
  "description": "Alerts users about potential ads on Bilibili videos.",
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://*.bilibili.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/video/BV*"],
      "js": [
        "keywords.js",
        "config.js",
        "cache-manager.js",
        "ui-manager.js",
        "ad-detector.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
